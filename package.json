{
  "name": "jamie-pryce-portfolio",
  "version": "1.0.0",
  "description": "Jamie Pryce - Azure Cloud Engineer Portfolio",
  "private": true,
  "author": "Jamie Pryce",
  "license": "MIT",
  "scripts": {
    "develop": "gatsby develop",
    "build": "gatsby build",
    "serve": "gatsby serve",
    "clean": "gatsby clean",
    "static": "echo 'Using static HTML deployment - index.html will be deployed'",
    "build:static": "echo 'Static HTML is ready for deployment'",
    "build:gatsby": "gatsby clean && gatsby build",
    "build:fast": "gatsby build --no-uglify",
    "deploy:static": "echo 'Deploy the root index.html file'",
    "deploy:gatsby": "echo 'Deploy the public/ folder after gatsby build'",
    "switch:static": "cp staticwebapp.config.json staticwebapp.config.json",
    "switch:gatsby": "cp staticwebapp.config.gatsby.json staticwebapp.config.json",
    "swa:init": "npx swa init --yes",
    "swa:build": "npx swa build",
    "swa:deploy": "npx swa deploy --env production",
    "api:install": "cd api && npm install",
    "api:start": "cd api && func start",
    "api:dev": "cd api && npm start",
    "dev:full": "concurrently \"npm run develop\" \"npm run api:start\"",
    "dev:static": "concurrently \"npx http-server . -p 3000\" \"npm run api:start\""
  },
  "dependencies": {
    "gatsby": "^5.14.5",
    "gatsby-plugin-image": "^3.14.0",
    "gatsby-plugin-react-helmet": "^6.14.0",
    "gatsby-plugin-sharp": "^5.14.0",
    "gatsby-source-filesystem": "^5.14.0",
    "gatsby-theme-portfolio-minimal": "^4.6.5",
    "gatsby-transformer-json": "^5.14.0",
    "gatsby-transformer-remark": "^6.14.0",
    "gatsby-transformer-sharp": "^5.14.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet": "^6.1.0",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@types/node": "^24.0.12",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "concurrently": "^9.2.0",
    "http-server": "^14.1.1"
  }
}
